{
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compilerOptions": {
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
  }
}